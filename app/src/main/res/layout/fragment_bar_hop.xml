<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"

    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BarHopActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<fragment
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:name="zombietechnologiesinc.com.barhop.UserMenuFragment"
        class="zombietechnologiesinc.com.barhop.UserMenuFragment">



    </fragment>-->


    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:layout_height="95dp"

        android:background="@color/main_top_grey">

        <!--<ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/main_toplogo"
            android:paddingTop="10dp"
            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="60dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/menu_icon"
                    android:id="@+id/menu_iconTV"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginEnd="45dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/barhopTV1"
                    android:text="BAR"
                    android:paddingTop="15dp"
                    android:textSize="20sp"
                    android:shadowColor="@color/white"
                    android:textStyle="bold"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:id="@+id/barhopTV2"
                    android:textSize="20sp"
                    android:text="HOP"
                    android:shadowColor="@color/white"
                    android:textStyle="bold"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:orientation="horizontal"
            android:background="@drawable/search_bar"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/search_icon_th"
                android:scaleType="fitCenter"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/search_bar"

                android:paddingStart="5dp"
                android:drawablePadding="30dp"
                android:hint="Search..."/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/second_menu_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_weight="1">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/disco_ball_color"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_backing"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dance_clubTV"
                android:text="Dance Club"
                android:textSize="10sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/mic_color_logo2"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_backing"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/micTV"
                android:text="Karaoke"
                android:textSize="10sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_weight="1"

            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/guitar_color_logo"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_backing"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/live_musicTV"
                android:text="Live Music"
                android:textSize="10sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/beermug_color_logo"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_backing"
                android:padding="1dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pubTV"
                android:text="Pub"
                android:textSize="10sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/wine_color_logo"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_backing"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wineTV"
                android:text="Winery"
                android:textSize="10sp"
                android:textColor="@color/white"/>

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black">


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:id="@+id/linear_layout"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        >

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/barRecyclerView"
            android:elevation="10dp"/>
        <!--

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/barLV"/>
        -->


    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>


</LinearLayout>
