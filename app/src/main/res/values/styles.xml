<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/custom_borders_bar</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="BarHopTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/background_barhop</item>
        <item name="android:textColorPrimary">@color/primary_dark_barhop</item>
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_barhop</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/background_color</item>
        <item name="android:textColorPrimary">@color/primary_dark_barhop</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>



    </style>

    <style name="mytoast">
        <item name="textBold">true</item>
        <item name="textColor">@color/white</item>
        <item name="textFont">@font/geosanslight</item>
        <item name="textSize">14sp</item>
        <item name="colorBackground">@color/main_top_grey</item>
        <item name="solidBackground">true</item>
        <item name="iconLeft">@drawable/disco_ball</item>
        <item name="iconRight">@drawable/disco_ball</item>
        <item name="length">LONG</item>         ENUM: LONG | SHORT
        <item name="cornerRadius">5dp</item>
    </style>

</resources>
